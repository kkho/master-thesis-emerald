@Initial revision
@
text
@d3 1
d9 3
a11 3
  work|mako|ubc)
    echo 'rcmp -u -z `allfiles` mako:/emerald'
    rcmp -u -z `allfiles` mako:/emerald ;;
d13 2
a14 2
    echo 'rcmp -u -z `allfiles` norm.home:/emerald'
    rcmp -u -z `allfiles` norm.home:/emerald ;;
d16 2
a17 2
    echo 'rcmp -u -z `allfiles` ${1}:/emerald'
    rcmp -u -z `allfiles` ${1}:/emerald ;;
@
